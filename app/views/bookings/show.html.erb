<div class="container">
  <div class="banner-item"> <h2><%= @room[0]["name"] %></h2></div>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%=  @room[0]["picture"] %>);">
  </div>
      <div class="col-xs-12 col-sm-6">
        <div class="project project-radius project-success" id="mark-green">
          <div class="project-content">
            <h3 class="lead">
              Room Bookings
            </h3>
            <p>
              <%= @bookings_room.count %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="project project-radius project-primary" id="mark">
          <div class="project-content">
            <h3 class="lead">
              Room Revenue
            </h3>
            <p>
              <%= number_to_currency_br(@revenue_room) %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="project project-radius project-danger" id="mark-red">
          <div class="project-content">
            <h3 class="lead">
              Room Fees
            </h3>
            <p>
              <%= number_to_currency_br(@fee_room) %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="project project-radius project-primary" id="mark">
          <div class="project-content">
            <h3 class="lead">
              Room Income
            </h3>
            <p>
              <%= number_to_currency_br(@income_room) %>
            </p>
          </div>
        </div>
      </div>
    <div class="col-xs-12 col-lg-12">
      <%= line_chart @total_rev_month_room, xtitle: "Date", ytitle: "Revenue" %>
    </div>
  </div>
