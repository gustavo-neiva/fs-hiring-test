<div class="container">
  <h1><%= @room[0]["name"] %></h1>
      <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%=  @room[0]["picture"] %>);">
      <div class="banner-item"> <small>Bookings</small><br><span id="mark-green"><%= @bookings_room.count %></span></div>
      <div class="banner-item"> <small>Revenue</small><br><span id="mark"><%= number_to_currency_br(@revenue_room) %></span></div>
      <div class="banner-item"> <small>Fee</small><br><span id="mark-red"><%= number_to_currency_br(@fee_room) %></span></div>
      <div class="banner-item"> <small>Income</small><br><span id="mark"><%= number_to_currency_br(@income_room) %></span></div>
    </div>
    <div class="col-lg-12">
      <%= line_chart @total_rev_month, xtitle: "Date", ytitle: "Revenue" %>
    </div>
  </div>
